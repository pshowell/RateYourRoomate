
{{> nav}}

<main id="HomeMain">
          <div class="background-image responsive"></div>
               <div class="jumbotron">
                    <h1>Find and Rate a Roommate!</h1>
                    <h2>Never have a bad roommate experience again.</h2>
              </div>

<div class="row">
                <div class="col-4">
                  {{> profileSidebar}}
                </div>
  <div class="col-8">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <img class="rounded mx-auto img-fluid" src="{{picture}}" alt="{{name}}">
                <h1>{{name}}, {{age}}</h1>
                <h2>{{#if withRoom}}{{WithRoom}} | {{/if}}{{rlocation}}</h2>
                <p>{{rlocation}}</p>
                <p>{{bio}}</p>
                {{#if isUser}}
                <form action="/roommates/{{id}}" method="post" id="AddFriendForm" data-userId="{{userId}}" style="margin-bottom: 20px">
                    <input type="hidden" value="{{id}}" name="friendRoommateId" id="FriendRoommateId"/>
                    <input type="submit" value="Add Friend" id="SubmitFriend" class="btn btn-default" data-toggle="modal" data-target="#FriendsModal" />
                </form>
                {{/if}}
            </div>
            <div class="col-md-9">
                <ul class="nav nav-tabs roommate-margin-b-sm">
                    <li class="nav-item">
                        <a id="view-roommates" class="nav-link section-change active" data-section="#Users">Users</a>
                    </li>

                    <li class="nav-item">
                        <a id="view-friends" class="nav-link section-change" data-section="#Friends">Friends</a>
                    </li>
                </ul>

                <section id="Users">
                    <div class="row">
                        <div class="col">
                            <h2 class="text-left" style="display: inline-block">Users</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col-lg-6">
                            <div class="card w-100">
                                <img class="card-img-top img-fluid" src="{{userPicture}}" alt="{{userName}}" />
                                <div class="card-body">
                                    <h4 class="card-title text-center">{{userName}}, {{userAge}}</h4>
                                    <a href="/users/{{userId}}" class="btn btn-primary">View Profile</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

                <section id="Posts" class="d-none">
                    <div class="row">
                        <div class="col">
                            <h2 class="text-left" style="display: inline-block">Posts</h2>
                        </div>
                    </div>
                    <div class="row justify-content-center">
                        <div class="col">Coming Soon</div>
                    </div>
                </section>

                <section id="Friends" class="d-none">
                    <div class="row">
                        {{#each friendRoommates}}
                        <div class="col-md-6">
                            <div class="card float-left w-100">
                                <img class="card-img-top" src="{{picture}}" alt="Card image cap">
                                <div class="card-body">
                                    <h4 class="card-title">{{name}}</h4>
                                    <p class="card-text">{{bio}}</p>
                                    <a href="/roommates/{{id}}" class="btn btn-primary">View Profile</a>
                                </div>
                            </div>
                        </div>
                        {{/each}}
                    </div>
                </section>
            </div>
        </div>

        <div id="FriendsModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="friendModal" aria-hidden="true">
            <div class="modal-dialog modal-lg">
                <div class="modal-content">
                    <div class="container-fluid">
                        <h3 class="modal-title">Which Roommate Would You Like To Match With?</h3>
                        <div id="AsyncFriends" class="row"></div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
