{{> nav}}

<main id="HomeMain">

          <div class="background-image responsive"></div>
               <div class="jumbotron">
                    <h1>Find and Rate a Roommate!</h1>
                    <h2>Never have a bad roommate experience again.</h2>


             </div>
          <div class="container">
          <div class="row">
              <div class="col-4">
                {{> profileNav }}
                {{> profileSidebar}}
              </div>
                  <div class="row justify-content-center">
                      <form ref='uploadForm' id='UserPictureUploadForm' action='/api/upload' method='post' encType="multipart/form-data">
                          <div class="form-group">
                              <input type="hidden" name="id" value="{{userid}}" />
                              <input type="hidden" name="name" value="{{username}}" />
                              <input type="file" name="userPicture"/>
                              <button type="submit" class="btn btn-success" id="upload">Upload!</button>
                          </div>
                      </form>

                      <form id="edit-profile" name="edit-profile" method="post" action="/api/profile">
                          <div class="form-group">
                              <label for="name" class="col-form-label">Name</label>
                              <input type="text" class="form-control" name="name" placeholder="Name" value="{{userName}}">
                          </div>
                          <div class="form-group">
                              <label for="email" class="col-form-label">Email</label>
                              <input type="email" class="form-control" name="email" placeholder="Email" value="{{userEmail}}">
                          </div>
                          <div class="form-row">
                              <div class="form-group col-md-6">
                                  <label for="location" class="col-form-label">Location</label>
                                  <input type="text" class="form-control" name="location" placeholder="City" value="{{userLocation}}">
                              </div>
                              <div class="form-group col-md-4">
                                  <label for="gender" class="col-form-label">Gender</label>
                                  <select required name="gender" class="form-control">
                                      {{#if isMale}}
                                      <option name="gender" value="male" selected>Male</option>
                                      <option name="gender" value="female">Female</option>
                                      {{else}}
                                      <option name="gender" value="male">Male</option>
                                      <option name="gender" value="female" selected>Female</option>
                                      {{/if}}
                                  </select>
                              </div>
                              <div class="form-group col-md-2">
                                  <label for="age" class="col-form-label">Age</label>
                                  <input class="form-control" name="age" type="number" value="{{userAge}}">
                              </div>
                          </div>
                          <div class="form-group">
                              <label for="bio">Bio</label>
                              <textarea class="form-control" name="bio" type="text" rows="3">{{userBio}}</textarea>
                          </div>
                          <div class="form-group text-right">
                              <button id="cancel-edit" class="btn btn-danger" type="button">Cancel</button>
                              <button type="submit" class="btn btn-success">Save</button>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
          </div>
